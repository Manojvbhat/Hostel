<html>
  <head>
    <%-include("../Homepage/Header") -%> 
    <link rel="stylesheet" href="/css/navandside.css">
    <link rel="stylesheet" href="/css/makeann.css">
  </head>
  <body>
    <%-include("../Homepage/Nav") -%> 
	
    <div>
    <%-include("../Homepage/sidebar")-%>
    </div>
    <div class="AnnContainer">
      <div class="AnnRow">
        <div class="AnnCol AnnCol30">
          <div class="AnnContent">
            <img src="/images/icon.png" alt="draft" />
          </div>
        </div>
        <div class="AnnCol AnnCol50">
          <div class="AnnTitle">
            <h1>Announcement</h1>
          </div>
          <form method="post" action="/makeannouncement">
            <input type="text" placeholder="FROM" class="AnnInputFrom" />
            <input type="text" name="title" placeholder="Message" class="AnnInputMsg" />
            <textarea
              placeholder="Description"
              class="AnnInputDesc"
              name="text"
              id="desc"
            ></textarea>
            <div class="AnnBtn-box">
              <input type="submit"  value="Send" class="AnnBtn" />
            </div>
          </form>
        </div>
      </div>
    </div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>
