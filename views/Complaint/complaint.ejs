<html lang="en">
  <head>
	<!-- <title>Complaint Section</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" /> -->
	<%-include("../Homepage/Header") -%> 
	<link rel="stylesheet" href="/css/navandside.css">
  </head>
  <body>
    
	<%-include("../Homepage/Nav") -%> 
	<div>
    <%-include("../Homepage/sidebar")-%>
    </div>
    <section id="complaint">
      <div class="container" style="margin-top: 75px">
        <div class="row">
          <div class="col-lg-12 text-center">
            <h2 class="text-uppercase section-heading">Complaint Section</h2>
            <h6 class="text-muted section-subheading mb-4">
              Action to be taken very soon!
            </h6>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <form  method="post" action="/complaint" >
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group mb-3">
                    <input
                      id="name"
                      class="form-control"
                      type="text"
                      placeholder="Your Name"
                      required
                    /><small
                      class="form-text text-danger flex-grow-1 lead"
                    ></small>
                  </div>
                  <div class="form-group mb-3">
                    <input
                      id="srno"
                      name="srno"
                      class="form-control"
                      type="tel"
                      placeholder="srno"
                      pattern="\d{6}"
                      title="SR number shold be 6 charecters"
                      required
                    />
                    <small class="form-text text-danger lead"></small>
                  </div>
                  <div class="form-group mb-3">
                    <input
                      id="RoomNo"
                      class="form-control"
                      type="number"
                      placeholder="Room Number"
                      required
                    /><small class="form-text text-danger lead"></small>
                  </div>
                  <div class="form-group mb-3">
                    <input
                      class="form-control"
                      type="tel"
                      placeholder="Phone Number"
                      pattern="\d{10}"
                      title="Mobile number shold be 10 charecters"
                      required
                    /><small class="form-text text-danger lead"></small>
                  </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group form-floating mb-3">
                        <select
                        name="item"
                          class="form-select"
                          id="ItemSelection"
                          aria-label="Floating label select example"
                        >
                          <option value="Light">Light</option>
                          <option value="Fan">Fan</option>
                          <option value="Switch">Switch</option>
                          <option value="Fan Regulator">Fan Regulator</option>
                          <option value="Furniture">Furniture</option>
                          <option value="Cupboard">Cupboard</option>
                          <option value="Room Door">Room Door</option>
                          <option value="Window">Window</option>
                          <option value="Washing Machine">Washing Machine</option>
                          <option value="Others">Others</option>
                        </select>
                        <label for="ItemSelection">Select the Item</label>
                      </div>
                  <div class="form-group mb-3">
                    <textarea
                    name="complaint"
                      id="description"
                      class="form-control"
                      placeholder="Complaint Description"
                      style="height: 150px"
                    ></textarea
                    ><small class="form-text text-danger lead"></small>
                  </div>
                </div>
                <div class="w-100"></div>
                <div class="col-lg-12 text-center">
                  <div id="success"></div>
                  <button
                    id="submitButton"
                    class="btn btn-primary btn-xl text-uppercase"
                    type="submit"
                  >
                    Sumbit
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
   
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
	
  </body>
</html>
